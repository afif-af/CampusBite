<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CongratsBottomSheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/yeonsungregular"
            android:gravity="center"
            android:text="Congrats \n Your Order Placed"
            android:textColor="@color/green"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/rightsignlarge" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gotoHomeButton"
            android:layout_width="157dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_height="57dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/gohomeshape"
            android:fontFamily="@font/yeonsungregular"
            android:text="Go Home"
            android:textColor="@color/white" />
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>